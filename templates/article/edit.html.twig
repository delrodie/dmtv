{% extends 'backoffice_layout.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <div class="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Gestion des rubriques </h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card m-b-30">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Modification</h4>

                            {{ include('article/_form.html.twig', {'button_label': 'Modifier'}) }}

                            {{ include('article/_delete_form.html.twig') }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('backoffice/plugins/select2/select2.min.css') }}">
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <style type="text/css">
        .rubrique-select{
            background-color: rgba(105, 103, 154, 0.3) !important;
        }
        .rubrique-select:focus{
            outline: none;
        }
        .rubrique-select{
            color: rgba(0, 0, 0, 0.5);
            line-height: 38px;
        }
        .rubrique-select__choice{
            margin-top: 7px;
            background-color: rgba(105, 103, 154, 0.3);
        }
        .select--container--default{
            color: #0b0b0b;
            background-color: #6b6096;
        }
        .select2-dropdown {
            background-color: #6b6096;
            color: rgba(255, 255, 255, 0.5);
            border-color: rgba(255, 255, 255, 0.2);
        }
        .select2-container--default .select2-results__option--highlighted[aria-selected] {
            background-color: #444444;
            color: #fff;
        }

        .select2-container--default .select2-search--dropdown .select2-search__field {
            border: 1px solid rgba(255, 255, 255, 0.2);
            background-color: #3e6b7f;
            color: rgba(255, 255, 255, 0.5);
        }

        .select2-container--default .select2-results__option[aria-selected=true] {
            background-color: #365d6e;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('backoffice/plugins/select2/select2.min.js') }}"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <script>
        $(".rubrique-select").select2();
        $(".tags").tagsinput();
        $('.datepicker').datepicker({
            uiLibrary: 'bootstrap4',
            format: 'yyyy-mm-dd'
        });
    </script>
{% endblock %}