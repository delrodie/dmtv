{{ form_start(form) }}
    <div class="form-group">
        <div class="row mt-1">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.titre) }}
                    </div>
                    <div class="col-12 mt-3">
                        {{ form_row(form.lien) }}
                    </div>
                    <div class="col-12 mt-3">
                        {{ form_row(form.auteur) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.description) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-1">
            <div class="col-6">
                {{ form_row(form.rubrique) }}
            </div>
            <div class="col-6" style="color: white">
                {{ form_row(form.publieLe) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                {{ form_row(form.img480) }}
            </div>
            <div class="col-6">
                {{ form_row(form.tag) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6 custom-control custom-checkbox">
                {{ form_widget(form.isValid) }}
                {{ form_label(form.isValid) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6 custom-control custom-checkbox">
                {{ form_widget(form.IsSlide) }}
                {{ form_label(form.IsSlide) }}
            </div>
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="form-group mt-2 mb-0">
        <div class="text-right">
            <a href="{{ path('article_index') }}" class="btn btn-secondary waves-effect m-l-5">Annuler</a>
            <button class="btn btn-primary waves-effect waves-light">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
{{ form_end(form) }}
