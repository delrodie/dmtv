{% extends 'backoffice_layout.html.twig' %}

{% block title %}{{ parent() }} Gestion des medias{% endblock %}

{% block body %}
    <div class="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Gestion des medias </h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <div class="row mb-5">
                                <div class="col-6"><h4 class="mt-0 header-title">Liste des articles</h4></div>
                                <div class="col-6">
                                    <div class="text-right">
                                        <a href="{{ path('article_new') }}" class="btn btn-primary">
                                            <i class="fa fa-plus-circle"></i> Ajouter un article
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-8">
                                    <div class="row">
                                        <div class="col-md-10 col-xl-8">
                                            <div class="card m-b-30">
                                                <img class="card-img-top img-fluid" src="{{ absolute_url(asset('uploads/1920/' ~ medium.img1920)) }}" alt="{{ medium.article.titre }}">
                                                <div class="card-body">
                                                    <h5 class="card-title">Slide</h5>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-md-4 col-xl-4">
                                            <div class="card m-b-30">
                                                <img class="card-img-top img-fluid" src="{{ absolute_url(asset('uploads/250/' ~ medium.img250)) }}" alt="{{ medium.article.titre }}">
                                                <div class="card-body">
                                                    <h5 class="card-title">loupe</h5>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    {{ include('media/_form.html.twig', {'button_label': 'Modifier'}) }}
                                    {{ include('media/_delete_form.html.twig') }}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
