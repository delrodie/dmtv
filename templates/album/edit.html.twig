{% extends 'backoffice_layout.html.twig' %}

{% block title %}{{  parent() }} Gestion des albums{% endblock %}

{% block body %}
    <div class="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Gestion des albums </h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <div class="row mb-5">
                                <div class="col-6"><h4 class="mt-0 header-title">Liste des albums</h4></div>
                                <!--<div class="col-6">
                                    <div class="text-right">
                                        <a href="{{ path('album_index') }}" class="btn btn-primary">
                                            <i class="fa fa-plus-circle"></i> Ajouter un album
                                        </a>
                                    </div>
                                </div>-->
                            </div>

                            <div class="row">
                                <div class="col-8">
                                    <div class="row">
                                        {% for album in albums %}
                                            <div class="col-md-4 col-xl-4">
                                                <div class="card m-b-30">
                                                    <img class="card-img-top img-fluid" src="{{ absolute_url(asset('uploads/album/' ~ album.cover)) }}" alt="{{ album.titre }}">
                                                    <div class="card-body">
                                                        <h5 class="card-title"><a href="{{ path('article_show', {'id': album.id}) }}">{{ album.auteur }}</a></h5>

                                                    </div>

                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <div class="row">
                                        <div class="col-12 text-center">
                                            {{ knp_pagination_render(albums) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    {{ include('album/_form.html.twig', {'button_label': 'Modifier'}) }}
                                    {{ include('album/_delete_form.html.twig') }}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}




