{% extends 'backoffice_layout.html.twig' %}

{% block title %}Newsletter index{% endblock %}

{% block body %}
    <div class="page-content-wrapper dashboard">

        <div class="container-fluid">

            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Gestion des rubriques </h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-xl-9">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Liste des rubriques</h4>

                            <table class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">RUBRIQUES</th>
                                    <th class="text-center">ACTIONS</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for newsletter in newsletters %}
                                    <tr>
                                        <td class="text-right mr-3">{{ loop.index }}</td>
                                        <td>{{ newsletter.email }}</td>
                                        <td>{{ newsletter.isValid}}</td>
                                        <td class="text-center">
                                            <a href="{{ path('newsletter_edit', {'id': newsletter.id}) }}"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

{% endblock %}
